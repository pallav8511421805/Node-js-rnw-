<body>
<section>
    <div class="container">
        <div class="row">
            <div class="box1 mg3">
                <div class="w100">
                    <h1 class="h1">Login</h1>
                    <form method="post" class="mg">

                    <div class="divmg">
                        <label class="h2">Email</label>
                        <div class="center">
                            <input type="text" name="email" placeholder="Enter your email" class='input'/>
                        </div>
                    </div>

                    <% if(invalid){ %>
                    %> <p style='color: red;font-size: 16px;'>Wrong email address.</p> <%
                    <% } %>

                    <div class="divmg">
                        <label class="h2">Password</label>
                        <div class="center">
                            <input type="text" name="password" placeholder="Enter your password" class='input'/>
                        </div>
                    </div>

                    <% if(invalid){ %>
                        %> <p style='color: red;font-size: 16px;'>Wrong password.</p> <%
                    <% } %>

                                
                        <div class="center">
                            <input type="submit" value="Login" class='btn'/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mg4">
    <div class="container">
        <div class="row">
            <p class="acself mg10 ptagcolor">Don't have an account yet ?</p><a href="/signup" class="acself atag2data mg10">Create an account</a>
        </div>
    </div>
</section>
